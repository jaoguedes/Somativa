@model Somativa.Models.CompraItem

@{
    ViewData["Title"] = "Create";
    var CompraIdAux = ViewData["CompraId"];
}

<div class="cabecario mt-3">Item de Compra</div>
<hr />
<div class="row" style="justify-content: center;height: 100vh; background: radial-gradient(50% 50% at 50% 50%, #2F2D2D 0%, #171717 100%); ">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="CompraId" class="control-label"></label>
                <input asp-for="CompraId" value="@CompraIdAux" class="form-control" readonly />
            </div>
            <div class="form-floating mb-3">
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <label asp-for="ProdutoId" class="control-label text-dark"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Quantidade" class="form-control" placeholder=" " />
                <label asp-for="Quantidade" class="control-label text-dark"></label>
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Unitario" class="form-control" placeholder=" " />
                <label asp-for="Unitario" class="control-label text-dark"></label>
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
