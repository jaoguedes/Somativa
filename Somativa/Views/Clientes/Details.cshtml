@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Details";
}
<div style="height: 100vh; background: radial-gradient(50% 50% at 50% 50%, #2F2D2D 0%, #171717 100%); ">
<h1 class="cabecario fw-lighter" style="font-size: 50px; margin-bottom: 0;">detalhes</h1>
<h4 class="cabecario">CLIENTE</h4>
<div style="display: flex;justify-content: center;">
    <hr />
    <div class="card text-black" style="width: 300px;">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>
            </dl> 
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.ClienteId">Editar</a>
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </div>

</div>
</div>