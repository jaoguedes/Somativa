@model Somativa.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="cabecario fw-lighter" style="font-size: 50px; margin-bottom: 0;">editar</h1>
<h4 class="cabecario">Cliente</h4>
<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="form-floating mb-3">
                <input asp-for="Nome" class="form-control" placeholder=" " />
                <label asp-for="Nome" class="control-label text-dark"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Endereco" class="form-control" placeholder=" " />
                <label asp-for="Endereco" class="control-label text-dark"></label>
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Telefone" class="form-control" placeholder=" " />
                <label asp-for="Telefone" class="control-label text-dark"></label>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Cpf" class="form-control" placeholder=" " />
                <label asp-for="Cpf" class="control-label text-dark"></label>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder=" " />
                <label asp-for="Email" class="control-label text-dark"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Nascimento" class="form-control" placeholder=" " />
                <label asp-for="Nascimento" class="control-label text-dark"></label>
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
